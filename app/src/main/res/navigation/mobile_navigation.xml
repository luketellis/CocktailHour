    <fragment
        android:id="@+id/navigation_home"
        android:name="com.example.cocktailhour.ui.home.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/navigation_dashboard"
        android:name="com.example.cocktailhour.ui.dashboard.DashboardFragment"
